<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
  <!--include하고자 하는 파일 명을 적으면 그 파일을 가져와서 사용할 수 있어!-->
  <body>
    <%- include("../menu"); %>

    <form id="updateForm">
      <!-- Material input -->
      <div class="md-form">
        <input
          type="text"
          id="singer"
          class="form-control"
          value="<%=result.singer%>"
          required
        />
      </div>
      <div class="md-form">
        <input
          type="text"
          id="title"
          class="form-control"
          value="<%=result.title%>"
          required
        />
      </div>
      <button type="submit" class="btn btn-secondary">save</button>
    </form>

    <%-include("../footer");%>

    <script>
      $(function () {
        $("#updateForm").submit((event) => {
          event.preventDefault(); //submit이 기본적으로 가지고있는 속성을 막음
          const singer = $("#singer").val();
          const title = $("#title").val();

          $.ajax({
            url: "/api/music/<%=result._id%>",
            type: "PUT",
            data: { singer, title },
          })
            .done(() => {
              location.href = "/api/music/<%=result._id%>"; //상세조회로 이동
            })
            .fail((request, status, error) => {
              alert(request.responseText);
            });
        });
      });
    </script>
  </body>
</html>
